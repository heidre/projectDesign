{
  "manifest_version": 2,

  "name": "Modify CSS and HTML",
  "version": "0.1.0",
  "description": "This extension highlights passive words in a web page.",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Expose Moi"
  },

  "content_scripts": [{
    "css": ["styles.css"],
   // "js": ["passive2.js"],
    "matches": ["*://*/*","file://*/*"]
  }],
  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}
